{
  "name": "buddyboss/buddyboss-platform",
  "description": "The BuddyBoss Platform adds community features to WordPress. Member Profiles, Activity Feeds, Direct Messaging, Notifications, and more!",
  "type": "wordpress-plugin",
  "keywords": [
    "activity",
    "community",
    "friends",
    "groups",
    "messaging",
    "notifications",
    "profiles",
    "social network"
  ],
  "homepage": "https://www.buddyboss.com/",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "BuddyBoss Platform",
      "homepage": "https://www.buddyboss.com/platform/"
    }
  ],
  "support": {
    "tutorials": "https://www.buddyboss.com/resources/docs/",
    "reference": "https://www.buddyboss.com/resources/reference/",
    "issues": "https://github.com/buddyboss/buddyboss-platform/issues",
    "source": "https://github.com/buddyboss/buddyboss-platform"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/buddypress/wp-cli-buddypress.git"
    }
  ],
  "require": {
    "buddypress/wp-cli-buddypress": "2.0.2",
    "composer/installers": "~1.0",
    "php": ">=8.0.0",
	"php-ffmpeg/php-ffmpeg": "^1.1.0",
    "maennchen/zipstream-php": "^2.1"
  },
  "autoload": {},
  "scripts": {
    "move-buddypress-cli": [
      "rm -rf cli && mv vendor/buddypress/wp-cli-buddypress cli && rm -rf vendor/buddypress"
    ],
    "remove-ffmpeg-docs": [
      "rm -rf vendor/php-ffmpeg/php-ffmpeg/docs && rm -rf vendor/php-ffmpeg/php-ffmpeg/tests"
    ],
    "post-install-cmd": [
      "@remove-ffmpeg-docs",
	  "@move-buddypress-cli"
    ],
    "post-update-cmd": [
      "@remove-ffmpeg-docs",
	  "@move-buddypress-cli"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true
    }
  }
}
